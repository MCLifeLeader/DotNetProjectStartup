{
  "name": "Edu.Si.Project",

  // Base Image for the dev container. More info: https://aka.ms/vscode-remote/containers/images.
  "image": "mcr.microsoft.com/devcontainers/dotnet",

  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
    "ghcr.io/azure/azure-dev/azd:0": {
      "version": "stable"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "azureDnsAutoDetection": true,
      "installDockerBuildx": true,
      "installDockerComposeSwitch": true,
      "version": "latest",
      "dockerDashComposeVersion": "latest"
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "workloads" : [
        "aspire",
        "wasm-tools"
      ],
      "version": "latest",
      "additionalVersions": "lts"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "installYarnUsingApt": true,
      "version": "lts",
      "pnpmVersion": "latest",
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers-extra/features/npm-package:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {},
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    }
  },

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.windows": "PowerShell"
      },
      // VsCode extensions to install in the dev container.
      "extensions": [
        "DotJoshJohnson.xml",
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "humao.rest-client",
        "mechatroner.rainbow-csv",
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscodeintellicode-csharp",
        "ms-mssql.mssql",
        "ms-vscode.vscode-node-azure-pack",
        "ms-vsliveshare.vsliveshare",
        "rangav.vscode-thunder-client",
        "redhat.vscode-yaml",
        "ritwickdey.LiveServer",
        "yzhang.markdown-all-in-one",
        "msjsdiag.vscode-react-native",
        "donjayamanne.bower",
        "dbaeumer.vscode-eslint",
        "VisualStudioExptTeam.vscodeintellicode",
        "VisualStudioExptTeam.vscodeintellicode-completions",
        "ms-vscode.powershell",
        "SonarSource.sonarlint-vscode"
      ]
    }
  },

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "sudo pwsh -File ./post_devcontainer.ps1",

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [27080, 8541, 8206, 8100, 8110, 8120],

  "portsAttributes": {
    "27080": {
      "label": "Docker-Aspire_Dash-https",
      "protocol": "https"
    },
    "8541": {
      "label": "Docker-Aspire.Api-https",
      "protocol": "https"
    },
    "8206": {
      "label": "Docker-Aspire.BlazorApp-https",
      "protocol": "https"
    },
    "8100": {
      "label": "Docker-Startup.Api-https",
      "protocol": "https"
    },
    "8110": {
      "label": "Docker-Startup.BlazorApp-https",
      "protocol": "https"
    },
    "8120": {
      "label": "Docker-Startup.BlazorApp-https",
      "protocol": "https"
    }
  },

 "otherPortsAttributes": {
    "onAutoForward": "silent"
  },

  "containerEnv": {
    "ASPNETCORE_ENVIRONMENT": "Development",
    "DOTNET_ENVIRONMENT": "Development",
    "ASPNETCORE_LOCALDEV": "true"
  },

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
  "remoteUser": "root"
}
